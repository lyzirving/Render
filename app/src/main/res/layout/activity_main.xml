<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:text="shadow"
        android:enabled="false" />

    <Button
        android:id="@+id/btn_bvh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/btn_shadow"
        app:layout_constraintTop_toTopOf="@+id/btn_shadow"
        android:layout_marginStart="5dp"
        android:textAllCaps="false"
        android:text="BVH"
        android:enabled="false" />

    <Button
        android:id="@+id/btn_hit_aabb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/btn_bvh"
        app:layout_constraintTop_toTopOf="@+id/btn_bvh"
        android:layout_marginStart="5dp"
        android:textAllCaps="false"
        android:text="hit aabb"
        android:enabled="false" />

    <Button
        android:id="@+id/btn_ray_trace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/btn_hit_aabb"
        app:layout_constraintTop_toTopOf="@+id/btn_hit_aabb"
        android:layout_marginStart="5dp"
        android:textAllCaps="false"
        android:text="ray trace"
        android:enabled="false" />

</androidx.constraintlayout.widget.ConstraintLayout>